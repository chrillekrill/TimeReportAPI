@model TimeReportMvc.Models.UserModel.UserNewModel

@{
    ViewData["Title"] = "Create new user";
}
<div class="card">
    <div class="card-header">
        <h1>Create user</h1>
    </div>
    <div class="card-body">
        <form method="post" asp-action="UserCreate">
            <div class="form-group">
                <label asp-for="Username">Username</label>
                <input class="form-control" asp-for="Username"/>
                <span asp-validation-for="Username" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">Password</label>
                <Input class="form-control" asp-for="Password"/>
                <span asp-validation-for="Password" class="field-validation-error"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Role">Customer</label>
                <select class="form-control" asp-for="Role" asp-items="@Model.AllRoles">
                </select>
                <span asp-validation-for="Role" class="field-validation-error"></span>
            </div>

            <button type="submit" class="btn">Save</button>

        </form>

    </div>
</div>